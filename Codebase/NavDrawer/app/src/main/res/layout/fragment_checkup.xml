<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".JournalFragment">

    <!--//Text that will be displayed in middle of screen-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Check-Up Page"
        android:textColor="@color/black"
        android:textSize="40dp"/>

    <TableLayout
        android:id="@+id/table_checkUpButtons"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true">
    <TableRow android:layout_width="match_parent">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:autoSizeTextType="uniform"
                android:text="Stressed" />
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Sad" />
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:autoSizeTextType="uniform"
                android:text="Anxious" />
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Angry" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

    </TableRow>
        <TableRow android:layout_width="match_parent">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textSize="9dp"
                    android:text="Withdrawn" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="Lonely" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:autoSizeTextType="uniform"
                    android:text="Fearful" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="Happy" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button_save_checkUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table_checkUpButtons"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:text="Save" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>