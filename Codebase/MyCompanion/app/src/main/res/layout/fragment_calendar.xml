<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.CBS.MyCompanion.CalendarFragment"
    android:layout_centerVertical="true">


    <TextView
        android:id="@+id/currentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="15dp"
        android:text="Select Date"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>

    <CalendarView
        android:id="@+id/CalendarPageCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentDate"
        android:layout_alignStart="@+id/currentDate"
        android:layout_alignEnd="@+id/currentDate"
        android:layout_marginStart="-124dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="-118dp" />

    <TextView
        android:id="@+id/infobox1"
        android:layout_width="179dp"
        android:layout_height="171dp"
        android:layout_below="@+id/CalendarPageCalendar"
        android:layout_alignStart="@+id/CalendarPageCalendar"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/calendar_infoboxes"
        android:gravity="center"
        android:text="Infobox 1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infobox2"
        android:layout_width="179dp"
        android:layout_height="171dp"
        android:layout_below="@+id/CalendarPageCalendar"
        android:layout_alignStart="@+id/CalendarPageCalendar"
        android:layout_marginStart="182dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/calendar_infoboxes"
        android:gravity="center"
        android:text="Sample Text"
        android:textStyle="bold" />

</RelativeLayout>