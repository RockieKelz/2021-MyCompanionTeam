<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context="com.CBS.MyCompanion.ProfHelpFragment">

    <!--//Text that will be displayed in middle of screen-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginTop="45dp"
        android:text="Phone Numbers to Seek Professional Help"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/Crisis"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="150dp"
        android:text="@string/Crisis"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/suicide"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Crisis"
        android:paddingBottom="20dp"
        android:layout_marginStart="23dp"
        android:text="@string/Suicide"
        android:textColor="@color/black"
        />

        <TextView
            android:id="@+id/veterans"
            android:layout_below="@+id/suicide"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:layout_marginStart="23dp"
            android:text="@string/Veterans"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/veterans2"
            android:layout_below="@+id/veterans"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:layout_marginStart="23dp"
            android:text="@string/Veterans2"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/child"
            android:layout_below="@+id/veterans2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:layout_marginStart="23dp"
            android:text="@string/Child"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/domestic"
            android:layout_below="@+id/child"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:layout_marginStart="23dp"
            android:text="@string/Domestic"
            android:textColor="@color/black"
            />

    <LinearLayout
        android:id="@+id/profHelp_info_left"
        android:layout_width="358dp"
        android:layout_height="490dp"
        android:layout_marginStart="23dp"
        android:divider="#000"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="false"
        android:gravity="right"
        android:headerDividersEnabled="false"
        android:orientation="vertical"
        android:paddingTop="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="@string/CrisisNum"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="35dp"
            android:text="@string/SuicideNum"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="@string/VeteransNum"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="@string/VeteransText"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="@string/ChildNum"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="@string/DomesticNum"
            android:textColor="@color/black"
            />


    </LinearLayout>


</RelativeLayout>

