<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyCompanion" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkerBlue</item>
        <item name="colorPrimaryVariant">@color/darkerGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/darkerBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@null</item>
        <!-- <item name="android:windowLightStatusBar">true</item>  -->
        <!-- Customize your theme here. -->
    </style>

    <style name="line">
        <item name="android:background">@color/darkerBlue</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="NewFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">.1</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="ListFont" parent="android:Widget.ListView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Animation_PopUp">
        <item name="android:windowEnterAnimation">@anim/view_show</item>
        <item name="android:windowExitAnimation">@anim/view_hide</item>
        <item name="android:duration">1800</item>
    </style>

    <style name="Cut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">14dp</item>
    </style>
    <style name="Round" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerRadius">15dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>